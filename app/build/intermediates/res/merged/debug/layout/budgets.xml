<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BudgetsRLtoplevel"
    style="@style/ActivityTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
	<LinearLayout 
	    android:id="@+id/BudgetsLLtoplevel"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    >
    	<Button
	        android:id="@+id/BudgetsBNadd"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom"
	        android:gravity="center"
	        android:layout_margin="@dimen/largeMargin"
	        android:onClick="onClickAddBudgetButton"
	        android:text="@string/button_add_budget"
	        />
    	<ImageView
	        android:id="@+id/BudgetsIVbottomSpacer"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/spacerHeight"
	        android:background="@color/spacerColor"
	        tools:ignore="ContentDescription" 
	        />
    	<TextView 
	        android:id="@+id/BudgetsTVtitle"
	        style="@style/TitleFontStyle"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        android:text="@string/budgets_activity_title_string"
	        />
		<ListView
	         android:id="@+id/BudgetsLVbudgetButtons"
	         android:layout_height="wrap_content"
	         android:layout_width="match_parent"
	         android:layout_margin="@dimen/margin"
	         android:divider="@color/backgrnd"
	         android:dividerHeight="@dimen/thickMargin"
	         ></ListView>
		</LinearLayout>
</RelativeLayout><!-- From: file:/Users/Noble/Google%20Drive/Development%20Files%20(Sync)/Android%20Studo%20Projects/Android-Project-PIGuBank/app/src/main/res/layout/budgets.xml -->