<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    style="@style/CustomAlertDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/largeMargin"
        >
	    <TextView 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:text="@string/dialog_acc_add_name_tv"
	        />
	    <EditText
	        android:id="@+id/accETaccName"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:singleLine="true"
	        />
	   <LinearLayout
	        android:id="@+id/accDialogLLbalance"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
			android:orientation="horizontal"        
	        >
	      	<TextView
	        	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:gravity="start"
	    		android:text="@string/dialog_acc_add_avail_spend_tv"
	        	/>
	        <TextView 
	            android:id="@+id/accDialogTVbalanceSymbol"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginStart="@dimen/largeMargin"
	            />
		    <EditText
		        android:id="@+id/accDialogETbalance"
		        android:layout_width="fill_parent"  
		    	android:layout_height="wrap_content"
		    	android:gravity="center"
		        android:inputType="numberDecimal"
		        android:imeOptions="actionDone"
		        android:maxLength="12"
		    	android:singleLine="true"
		        />
	    	</LinearLayout>
    	<LinearLayout
   	        android:id="@+id/accDialogLLcheckboxs"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
			android:orientation="horizontal"  
    	    >
		    <CheckBox
		        android:id="@+id/accDialogCBoverview"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="@string/dialog_acc_labal_main_account"
		    	android:layout_gravity="center"
		        />
		  	<CheckBox
		  	    android:id="@+id/accDialogCBcredit"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="@string/dialog_acc_add_check_credit"
		    	android:layout_gravity="center"
		    	/>
		  		</LinearLayout>
	    <LinearLayout
	        android:id="@+id/accDialogLLcredit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
			android:orientation="horizontal"        
	        >
		    <TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:gravity="start"
		    	android:text="@string/dialog_acc_add_credit_limit_tv"
		        />
		    <TextView 
	            android:id="@+id/accDialogTVcreditSymbol"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginStart="@dimen/largeMargin"
	            />
		    <EditText
		        android:id="@+id/accDialogETcredit"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:gravity="center"
		        android:inputType="numberDecimal"
		        android:imeOptions="actionDone"
		        android:maxLength="12"
		    	android:singleLine="true"
		    	android:enabled="false"
		        />
		    	</LinearLayout>
	    </LinearLayout>
</RelativeLayout><!-- From: file:/A:/Google%20Drive/Development%20(Sync)/Android%20Studo%20Projects/PIGuBank/app/src/main/res/layout/acc_dialog.xml -->