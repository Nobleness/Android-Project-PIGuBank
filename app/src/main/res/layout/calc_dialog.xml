<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    style="@style/CustomAlertDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    <LinearLayout 
        android:id="@+id/calc_DialogLLcalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/largeMargin"
        android:orientation="horizontal"
        >
    
		<TextView 
		    android:id="@+id/calc_dialogTV"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:maxLength="1"
			android:maxLines="1"
			android:textSize="@dimen/titleTextSize"
			android:gravity="center"
			android:layout_marginStart="@dimen/largeMargin"
			android:layout_marginEnd="@dimen/largeMargin"
		    />
	    <EditText
	        android:id="@+id/calc_dialogET"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:imeOptions="actionDone"
	        android:inputType="numberDecimal"
	        android:maxLength="12"
	        android:singleLine="true"
	        android:textSize="@dimen/titleTextSize"
	        android:gravity="center"
	        android:layout_marginEnd="@dimen/largeMargin"
	        android:cursorVisible="true"
	        tools:ignore="LabelFor" 
	        />
	</LinearLayout>
 	<LinearLayout 
 	    android:id="@+id/calcDialogLLaccBgt"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:orientation="horizontal"
 	    android:layout_below="@+id/calc_DialogLLcalc"
 	    >
 	    <Spinner
 	        android:id="@+id/calcDialogSPacc"
 	        android:layout_width="match_parent"
 	        android:layout_height="wrap_content"
 	        android:layout_weight="0.5"
 	        />
 	    <Spinner
 	        android:id="@+id/calcDialogSPbgt"
 	        android:layout_width="match_parent"
 	        android:layout_height="wrap_content"
 	        android:layout_weight="0.5"
 	        />
	</LinearLayout>
    
</RelativeLayout>